<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.eventsupbase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.StartActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.EventActivity"
            android:label="Конференция">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.ConcreteReportActivity"
            android:label="Доклад">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ReportActivity" />
        </activity>
        <activity
            android:name=".Activities.ReportActivity"
            android:label="Доклады">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.EventActivity" />
        </activity>
        <activity android:name=".Activities.VisitedReportsActivity" />
    </application>

</manifest>
