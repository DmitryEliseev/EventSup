<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.eventsupbase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.StartActivity"
            android:label="Авторизация"
            android:noHistory="true"
            android:launchMode="singleTask">
            </activity>
        <activity android:name=".Activities.MainActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activities.EventActivity"
            android:label="Конференция">

        </activity>
        <activity
            android:name=".Activities.ConcreteReportActivity"
            android:label="Доклад">

        </activity>
        <activity
            android:name=".Activities.ReportActivity"
            android:label="Доклады">

        </activity>
        <activity
            android:name=".Activities.VisitedReportsActivity"
            android:label="Посещенные доклады">

        </activity>
        <activity android:name=".Activities.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
