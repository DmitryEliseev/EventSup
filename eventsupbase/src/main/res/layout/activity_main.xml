<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Приложение по поддержке мероприятия"
        android:id="@+id/app_name"
        android:layout_gravity="center_horizontal"
        android:textSize="26dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnScanQrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="Сканировать QR код"
        android:onClick="OnClick"
        android:layout_marginTop="20dp"
        android:background="#4052b5"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Все события"
        android:id="@+id/btnAllEvents"
        android:layout_gravity="center"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="#9daaf7"
        android:onClick="OnClick"
        android:layout_marginTop="20dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/twStatus"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textStyle="italic" />

</LinearLayout>